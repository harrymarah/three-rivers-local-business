<% layout('layouts/boilerplate')%> 

<div class="row">
    <h1 class="text-center">New Business</h1>
    <div class="col-6 offset-3">
        <form action="/businesses" method="POST" novalidate class='needs-validation'>
            <!-- business name field -->
            <div class="mb-3">
                <label class="form-label" for="title">Add a Business Name</label>
                <input class="form-control" type="text" id="title" name="business[title]" required>
            </div>
            <!-- Business description field - needs character limit to be put in place -->
            <div class="mb-3">
                <label class="form-label" for="description">Description <small class='text-muted'>500 characters max.</small></label>
                <textarea class="form-control" name="business[description]" id="description" cols="30" rows="4" required></textarea>
            </div>
            <!-- Image URL field, will be changed to a file upload eventually -->
            <div class="mb-3">
                <label class="form-label" for="imgurl">Image URL</label>
                <input class="form-control" type="text" id="imgurl" name="business[image]" required>
                <div class="invalid-feedback">You must include at least one image.</div>
            </div>  
            <!-- Business category selection, for loop loops over array saved in app.js and passed to new.ejs (move), more categories to be added -->
            <div class="mb-4">
                <label class="form-label" for="category">Category</label>
                <select id='category' class="form-select" aria-label="Default select example" name="business[category]" required>
                    <option selected>Select Category</option>
                    <% for(let category of categories){ %>
                        <option value="<%=category%>"><%=category%></option>
                    <% } %> 
                </select>
            </div>
            <!-- Address section, inputs need to be changed to stack on small screen. When ticking 'online only' box, all fields except town are disabled -->
            <h6>Address</h6>
            <div class="row mb-3">
                <div class="col">
                    <label class="form-label" for="address">Street Address</label>
                    <input type="text" class="form-control" id='address' name="business[location][address]" required>
                    <div class="invalid-feedback">You must either provide an address or click my business is online only.</div>
                </div>
                <div class="col">
                    <label class="form-label" for="town">Town</label>
                    <input type="text" class="form-control" id='town' name="business[location][town]" required>
                    <div class="invalid-feedback">Your local town must be included.</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label class="form-label" for="county">County</label>
                    <input type="text" class="form-control" id='county' name="business[location][county]" value='Hertfordshire' required>
                </div>
                <div class="col">
                    <label class="form-label" for="postcode">Postcode</label>
                    <input type="text" class="form-control" id='postcode' name="business[location][postcode]" value='WD3' required>
                </div>
            </div>
            <!-- checkbox to say business is online only, javascript code is at bottoms of ejs file, needs moving into its own file and folder -->
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value='true' id="flexCheckDefault" name='business[onlineOnly]'>
                <label class="form-check-label" for="flexCheckDefault">
                  My business is online only
                </label>
            </div>
            <!-- find way to trim front of website, then automatically add http://www. when saving to DB -->
            <div class="mb-3">
                <label class="form-label" for="website">Website</label>
                <input class="form-control" type="text" id="website" placeholder=""" name="business[website]" required>
            </div>
            <!-- find way to trim front 0 of number, then automatically +44 when saving to db -->
            <div class="row mb-3">
                <div class="col">
                    <label class="form-label" for="phone">Contact Number</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">+44</span>
                        <input type="text" class="form-control" id='phone' name='business[phone]'>
                      </div>
                </div>
                <div class="col">
                    <label class="form-label" for="email">Email</label>
                    <input type="text" class="form-control" id='email' name="business[email]" required>
                </div>
            </div>
            <!-- d-grid makes button span the full length of box -->
            <div class="mb-3 d-grid">
                <button class='btn btn-success'>Add your business!</button>
            </div>
        </form>
    <a href="/businesses">Back to all businesses</a>
    </div>
</div>
