<% layout('layouts/boilerplate')%> 

<h1>Local Businesses</h1>
<a href="/business/new">Add your local business</a>
    <% for(let business of businesses){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class='img-fluid' src="<%=business.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class='card-title'><%= business.title %> </h5>
                        <p class="card-text"><%= business.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= business.location.town %></small>
                        </p>
                        <a class='btn btn-primary' href="/business/<%= business._id %>">View <%= business.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %> 


    